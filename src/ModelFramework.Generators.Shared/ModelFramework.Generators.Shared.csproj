    <PackageReference Include="pauldeen79.TextTemplateTransformationFramework.Runtime" Version="0.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ModelFramework.Common\ModelFramework.Common.csproj" />
